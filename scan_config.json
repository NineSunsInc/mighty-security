{
  "scan_profiles": {
    "production": {
      "description": "Production scanning - excludes test/example code",
      "exclude_paths": [
        "**/test/**",
        "**/tests/**",
        "**/examples/**",
        "**/mcp_test_cases/**",
        "**/test_suite_output/**",
        "**/__pycache__/**",
        "**/.git/**",
        "**/node_modules/**",
        "**/venv/**",
        "**/.venv/**",
        "**/build/**",
        "**/*.pyc"
      ],
      "severity_adjustments": {
        "test_code": "ignore",
        "example_code": "ignore",
        "generated_code": "low",
        "security_tool_patterns": "info"
      },
      "context_aware": true
    },
    "development": {
      "description": "Development scanning - includes test code with adjusted severity",
      "exclude_paths": [
        "**/__pycache__/**",
        "**/.git/**",
        "**/node_modules/**",
        "**/venv/**",
        "**/.venv/**",
        "**/build/**",
        "**/*.pyc",
        "**/mcp_test_cases/**",
        "**/test_suite_output/**"
      ],
      "severity_adjustments": {
        "test_code": "low",
        "example_code": "low",
        "generated_code": "info"
      },
      "context_aware": true
    },
    "security-tool": {
      "description": "Scanning security tools - adjusted for analyzer code",
      "exclude_paths": [
        "**/__pycache__/**",
        "**/.git/**",
        "**/node_modules/**",
        "**/venv/**",
        "**/.venv/**",
        "**/build/**",
        "**/*.pyc"
      ],
      "severity_adjustments": {
        "test_code": "low",
        "example_code": "info",
        "generated_code": "info",
        "security_tool": "info"
      },
      "context_aware": true
    }
  },
  "severity_mappings": {
    "low": {
      "CRITICAL": "HIGH",
      "HIGH": "MEDIUM",
      "MEDIUM": "LOW",
      "LOW": "INFO",
      "INFO": "INFO"
    },
    "info": {
      "CRITICAL": "MEDIUM",
      "HIGH": "LOW",
      "MEDIUM": "INFO",
      "LOW": "INFO",
      "INFO": "INFO"
    },
    "ignore": {
      "CRITICAL": "IGNORE",
      "HIGH": "IGNORE",
      "MEDIUM": "IGNORE",
      "LOW": "IGNORE",
      "INFO": "IGNORE"
    }
  },
  "context_detection": {
    "test_indicators": {
      "path_patterns": ["/test/", "/tests/", "_test.py", "test_"],
      "content_patterns": ["import pytest", "import unittest", "def test_", "class Test"]
    },
    "example_indicators": {
      "path_patterns": ["/example", "/demo", "_example.py", "_demo.py"],
      "content_patterns": ["# Example:", "# Demo:", "if __name__ == '__main__':"]
    },
    "security_tool_indicators": {
      "imports": ["ast", "inspect", "bandit", "pylint", "re", "hashlib"],
      "class_patterns": ["Analyzer", "Scanner", "Detector", "Auditor", "Hook", "SecurityHook", "Proxy"],
      "function_patterns": ["detect_", "scan_", "analyze_", "audit_", "_detect_", "_sanitize_"],
      "path_patterns": ["/hooks/", "/analyzers/", "/security/", "/scanners/"]
    },
    "generated_indicators": {
      "path_patterns": ["__pycache__", ".pyc", "generated/"],
      "content_patterns": ["# Generated by", "# Auto-generated", "DO NOT EDIT"]
    }
  }
}